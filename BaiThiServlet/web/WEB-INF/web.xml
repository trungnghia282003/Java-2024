<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>PlayerServlet</servlet-name>
        <servlet-class>com.servlet.addPlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayPlayerServlet</servlet-name>
        <servlet-class>com.servlet.displayPlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updatePlayerServlet</servlet-name>
        <servlet-class>com.servlet.updatePlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deletePlayerServlet</servlet-name>
        <servlet-class>com.servlet.deletePlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>selectByIdServlet</servlet-name>
        <servlet-class>com.servlet.selectByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlayerServlet</servlet-name>
        <url-pattern>/PlayerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayPlayerServlet</servlet-name>
        <url-pattern>/DisplayPlayerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updatePlayerServlet</servlet-name>
        <url-pattern>/updatePlayerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deletePlayerServlet</servlet-name>
        <url-pattern>/deletePlayerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>selectByIdServlet</servlet-name>
        <url-pattern>/selectByIdServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>displayPlayer</welcome-file>
    </welcome-file-list>
</web-app>
